<svg viewport-fill="black">
 <defs>
  <symbol id="bar-template">
   <g id="bar-group">
    <rect x="100%-4" y="0" width="4" height="100%" fill="white">
     <animate attributeName="y" begin="enable" final="restore"
      from="0" to="100%" dur="30" />
    </rect>
   </g>
  </symbol>
 </defs>
 <svg width="100%" height="100%">
  <text id="code" x="50%" y="50%+15" />
  <use id="bar" href="#bar-template" />
 </svg>
</svg>
